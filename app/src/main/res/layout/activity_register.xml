<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activity.RegisterActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:background="@drawable/register_title_shape"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvRegisterTitle"
                android:text=""
                android:textStyle="bold"
                android:textSize="24sp"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_margin="10dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@color/login_bg"
                    android:gravity="center"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="30dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="10dp"
                        android:gravity="center">
                        <TextView
                            android:text="Profile Image"
                            android:layout_marginBottom="10dp"
                            android:textAlignment="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <RelativeLayout
                            android:layout_width="150dp"
                            android:layout_height="100dp">
                            <ImageView
                                android:id="@+id/imageViewProfileId"
                                android:contentDescription="@string/content_desc"
                                android:padding="5dp"
                                android:src="@drawable/ic_upload_profile_img"
                                android:scaleType="fitCenter"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentTop="true"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>
                            <ImageButton
                                android:id="@+id/imageButtonCancelProfileId"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentEnd="true"
                                android:background="@null"
                                android:visibility="gone"
                                android:src="@drawable/ic_baseline_cancel_24"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </RelativeLayout>

                    </LinearLayout>
                    <EditText
                        android:id="@+id/etNameRegister"
                        android:hint="Enter Name"
                        android:padding="10dp"
                        android:background="@drawable/edit_text_field_shape"
                        android:drawableStart="@drawable/ic_baseline_person_24"
                        android:drawablePadding="10dp"
                        android:inputType="textPersonName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:id="@+id/etEmailRegister"
                        android:hint="Enter Email"
                        android:padding="10dp"
                        android:background="@drawable/edit_text_field_shape"
                        android:drawableStart="@drawable/ic_baseline_email_24"
                        android:drawablePadding="10dp"
                        android:layout_marginTop="15dp"
                        android:inputType="textEmailAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:id="@+id/etPhoneRegister"
                        android:hint="Enter Phone Number"
                        android:padding="10dp"
                        android:background="@drawable/edit_text_field_shape"
                        android:drawableStart="@drawable/ic_baseline_contact_phone_24"
                        android:drawablePadding="10dp"
                        android:layout_marginTop="15dp"
                        android:inputType="phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:id="@+id/etIdNumberRegister"
                        android:hint="Enter Id Number"
                        android:padding="10dp"
                        android:background="@drawable/edit_text_field_shape"
                        android:drawableStart="@drawable/ic_id_number"
                        android:drawablePadding="10dp"
                        android:layout_marginTop="15dp"
                        android:inputType="numberDecimal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:id="@+id/etAgeRegister"
                        android:hint="Enter Age"
                        android:padding="10dp"
                        android:drawableStart="@drawable/ic_age"
                        android:drawablePadding="10dp"
                        android:layout_marginTop="15dp"
                        android:inputType="phone"
                        android:background="@drawable/edit_text_field_shape"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/tvSelectGenderLabelId"
                        android:text="Select Gender"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:textStyle="normal"
                        android:layout_marginTop="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <RadioGroup
                        android:id="@+id/radioGroupId"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <RadioButton
                            android:id="@+id/rbMale"
                            android:text="Male"
                            android:textStyle="bold"
                            android:textAllCaps="false"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:onClick="chkBtn"
                            android:layout_marginEnd="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <RadioButton
                            android:id="@+id/rbFeMale"
                            android:text="Female"
                            android:textStyle="bold"
                            android:textAllCaps="false"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:onClick="chkBtn"
                            android:layout_marginStart="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </RadioGroup>

                    <EditText
                        android:id="@+id/etPasswordRegister"
                        android:hint="Enter Password"
                        android:padding="10dp"
                        android:background="@drawable/edit_text_field_shape"
                        android:drawablePadding="10dp"
                        android:layout_marginTop="15dp"
                        android:inputType="textWebPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:id="@+id/etConfirmPasswordRegister"
                        android:hint="Confirm Password"
                        android:padding="10dp"
                        android:background="@drawable/edit_text_field_shape"
                        android:drawablePadding="10dp"
                        android:layout_marginTop="15dp"
                        android:inputType="textWebPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <!--            doctor location -->
                    <EditText
                        android:id="@+id/etDoctorLocationRegister"
                        android:hint="Type Your Real Location"
                        android:padding="10dp"
                        android:background="@drawable/edit_text_field_shape"
                        android:drawablePadding="10dp"
                        android:layout_marginTop="15dp"
                        android:inputType="text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:id="@+id/linear_select_location_id"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:text="Select Location"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:layout_marginTop="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <Spinner
                            android:id="@+id/spinner_location"
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/view"/>
                    </LinearLayout>





                    <TextView
                        android:id="@+id/tvChooseDoctor_label"
                        android:text="Choose Doctor"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:layout_marginTop="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <Spinner
                        android:id="@+id/spinnerRegisterChooseDoctor"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:visibility="gone"
                        android:background="@color/view"/>
                    <LinearLayout
                        android:id="@+id/linearLayoutRegisterDocument"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="15dp"
                        android:orientation="vertical">
                        <RelativeLayout
                            android:id="@+id/relativeLayoutId"
                            android:layout_width="150dp"
                            android:layout_height="100dp">
                            <ImageView
                                android:id="@+id/imgViewRegisterUploadDocuments"
                                android:contentDescription="@string/content_desc"
                                android:padding="5dp"
                                android:scaleType="fitCenter"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentTop="true"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>
                            <ImageButton
                                android:id="@+id/imageButtonCancelId"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentEnd="true"
                                android:background="@null"
                                android:src="@drawable/ic_baseline_cancel_24"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </RelativeLayout>

                        <Button
                            android:id="@+id/btnRegisterUploadDocuments"
                            android:text="Upload Documents"
                            android:textAllCaps="false"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:padding="5dp"
                            android:background="@drawable/button_custom_shape"
                            android:textColor="@color/white"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <Button
                        android:id="@+id/btnRegisterSubmitId"
                        android:text="Register"
                        android:background="@drawable/button_custom_shape"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:layout_marginTop="20dp"
                        android:textColor="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <TextView
                            android:text="Already have an account?"
                            android:textColor="@color/hint"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/tvLogin"
                            android:text="Login"
                            android:layout_marginStart="10dp"
                            android:textSize="17sp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>

            </ScrollView>



        </androidx.cardview.widget.CardView>

    </LinearLayout>



</LinearLayout>