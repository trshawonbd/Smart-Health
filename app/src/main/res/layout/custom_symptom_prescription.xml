<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/login_bg"
            android:paddingTop="30dp"
            android:paddingBottom="50dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

            <TextView
                android:text="Prescription"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <View
                android:id="@+id/view_pres_id"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="#000"/>
            <ProgressBar
                android:id="@+id/progressCustomPressId"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:indeterminate="true"
                android:indeterminateOnly="true"
                android:indeterminateBehavior="repeat"
                android:indeterminateTint="@color/colorAccent"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/etSymptomPrescription"
                android:inputType="textMultiLine"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/edit_text_message"
                android:layout_marginTop="16dp"
                android:padding="10dp"
                android:gravity="start"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:weightSum="2">
                <Button
                    android:id="@+id/btnCustomDialogSymptomPrescriptionCancel"
                    android:text="Cancel"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:background="@drawable/button_custom_shape"
                    android:textSize="16sp"
                    android:layout_marginEnd="5dp"
                    android:textAllCaps="false"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <Button
                    android:id="@+id/btnCustomDialogSymptomPrescriptionSend"
                    android:text="Send"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:background="@drawable/button_custom_shape"
                    android:textSize="16sp"
                    android:layout_marginStart="5dp"
                    android:textAllCaps="false"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>