    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewMsg"
        android:layout_above="@+id/relative_bottom_id"
        android:layout_below="@+id/cordinat_msg_for_toolbar"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/relative_bottom_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:weightSum="5"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:gravity="center"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/et_msg_id"
            android:background="@drawable/msg_et_shape"
            android:layout_width="0dp"
            android:padding="20dp"
            android:hint="Type Message..."
            android:layout_marginEnd="10dp"
            android:inputType="textMultiLine"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:layout_weight="4"/>
        <ImageButton
            android:id="@+id/send_button_id"
            android:src="@drawable/ic_baseline_send_24"
            android:background="@null"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>


    </LinearLayout>

