<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@color/colorPrimary"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imageViewNavHeader"
            android:contentDescription="@string/content_desc"
            android:layout_alignParentStart="true"
            android:layout_above="@+id/viewNavHeaderId"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
        <View
            android:id="@+id/viewNavHeaderId"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="4dp"
            android:layout_above="@+id/navHeaderName"
            android:background="@color/view"/>
        <TextView
            android:id="@+id/navHeaderName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textStyle="normal"
            android:text="Name"
            android:layout_marginTop="5dp"
            android:layout_alignParentStart="true"
            android:layout_above="@+id/navTitleGenger"
            android:textColor="@color/white"
            />
        <TextView
            android:id="@+id/navTitleGenger"
            android:textSize="12sp"
            android:textStyle="normal"
            android:layout_alignParentStart="true"
            android:layout_above="@+id/navTitleAge"
            android:layout_marginTop="2dp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender" />
        <TextView
            android:id="@+id/navTitleAge"
            android:textSize="12sp"
            android:textStyle="normal"
            android:layout_alignParentStart="true"
            android:layout_above="@+id/navTitleEmail"
            android:layout_marginTop="2dp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Age" />

        <TextView
            android:id="@+id/navTitleEmail"
            android:textSize="12sp"
            android:textStyle="normal"
            android:layout_above="@+id/navTitlePhone"
            android:layout_alignParentStart="true"
            android:layout_marginTop="2dp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email" />
        <TextView
            android:id="@+id/navTitlePhone"
            android:textSize="12sp"
            android:textStyle="normal"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="2dp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone" />
    </RelativeLayout>

</LinearLayout>
