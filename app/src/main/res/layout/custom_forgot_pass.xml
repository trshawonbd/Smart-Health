<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        app:cardCornerRadius="15dp"
        app:cardElevation="5dp"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/login_bg"
            android:paddingTop="30dp"
            android:paddingBottom="50dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

            <TextView
                android:id="@+id/tvForgotPassTitle"
                android:text="Enter Your Email And Phone Number To Recover Your Password"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <View
                android:id="@+id/viewForgotId"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/view"/>
            <ProgressBar
                android:id="@+id/progressCustomForgotPassId"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:indeterminate="true"
                android:indeterminateOnly="true"
                android:indeterminateBehavior="repeat"
                android:indeterminateTint="@color/colorAccent"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvWarningForgotPassId"
                android:text=""
                android:layout_marginTop="10dp"
                android:textStyle="normal"
                android:textSize="16sp"
                android:textAllCaps="false"
                android:textColor="@color/red"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Spinner
                android:id="@+id/spinnerSelectForgotMood"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/view"/>

            <EditText
                android:id="@+id/etForgotPassEmail"
                android:layout_marginTop="40dp"
                android:hint="Enter Email"
                android:padding="10dp"
                android:background="@drawable/edit_text_field_shape"
                android:inputType="textEmailAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/etForgotPassPhone"
                android:layout_marginTop="15dp"
                android:hint="Enter Phone Number"
                android:background="@drawable/edit_text_field_shape"
                android:padding="10dp"
                android:inputType="phone"
                android:maxLength="11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/etForgotPassPass"
                android:layout_marginTop="15dp"
                android:hint="Enter New Password"
                android:padding="10dp"
                android:background="@drawable/edit_text_field_shape"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/etForgotPassConPass"
                android:layout_marginTop="15dp"
                android:hint="Confirmation Password"
                android:padding="10dp"
                android:background="@drawable/edit_text_field_shape"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="40dp"
                android:weightSum="2">
                <Button
                    android:id="@+id/btnForgotPassCancelId"
                    android:text="Cancel"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:background="@drawable/button_custom_shape"
                    android:textColor="@color/white"
                    android:layout_marginEnd="5dp"
                    android:textAllCaps="false"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="5dp"
                    android:orientation="vertical">
                    <Button
                        android:id="@+id/btnForgotPassOkId"
                        android:text="OK"
                        android:background="@drawable/button_custom_shape"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textAllCaps="false"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />
                    <Button
                        android:id="@+id/btnForgotPassChangeId"
                        android:text="Confirm"
                        android:background="@drawable/button_custom_shape"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textAllCaps="false"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>





</LinearLayout>